<div class="breakdown-container">
	<table>
	<% items.each do |item| %>
		<tr>
			<td style="text-align: right"><%=item.name%></td>
			<td>
			<% if item.dailies_total > item.amount %>
			<span class="red">
				<%= number_to_currency(item.dailies_total, :unit => "$", :delimiter => ",") %>
				<span style="color: #000;font-size: x-small">(+<%=item.dailies_total-item.amount%>)</span>
			</span>
			<% else %>
			<span class="green">
				<%= number_to_currency(item.dailies_total, :unit => "$", :delimiter => ",") %>
				<span style="color: #000;font-size: x-small">(-<%=item.amount-item.dailies_total%>)</span>
			</span>
			<% end %>
			</td>
		</tr>
	<% end %>
	</table>
</div>