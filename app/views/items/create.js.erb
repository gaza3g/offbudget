$("#item-list-<%=@current_budget.id%>").html("<%= escape_javascript(render 'shared/item_info', :budget => @current_budget ) %>")
$("#notice").html('<div class="flash success"><%= escape_javascript(flash.delete(:success)) %></div>');
$(".new_item").each(function(index) {
   	this.reset();
  });

$('.item-edit').editable('/item/update', {
    name		:	$(this).attr('name'),
    id			:	$(this).attr('id'),
    cancel		:	'Cancel',
    submit		:	'OK',
    indicator	:	'Saving...',
    tooltip		:	'Click to edit...',
	method		: 	'put'
  });

