<% get_all_budget_items(budget.id).each do |item| %>

	<ul>
		<li>
			<span class="item-edit" id="<%= item.id %>"><%= item.name %></span> 
			- <span class="item-amount"><%= number_to_currency(item.amount, :unit => "$ ") %></span>
			<span style="font-size: small"> <%= link_to "delete", item, 	:remote => true, 
													:method => :delete, 
													:confirm => "Are you sure?", 
													:title => "Delete #{item.name}" %>
			</span>
		</li>
	</ul>

<% end %>
	