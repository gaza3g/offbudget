<% if user_signed_in? %>
  <table class="front" summary="For signed-in users">
	<tr>
		<td class="main">
			<h1 class="micropost">Budgets</h1>
			<%= render 'shared/budget_form' %>
			<h6>
				You can edit [<span class="budget-edit-sample">Budget</span>],  
				[<span class="item-edit-sample">Item</span>] and
				[<span class="item-amount-sample">$ Amount</span>] and by clicking on them.</h6>
		</td>
	</tr>
	<tr>
		<td class="round">
			<div id="budget-list">
	        	<%= render 'shared/budget_info' %>
			</div>
	  	</td>
   	</tr>
  </table>
<% else %>
  <h1>Please sign in or sign up</h1>

  <%= link_to "Sign up now!", new_user_registration_path, :class => "signup_button round" %>

<% end %>
